{
  "version": 2,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "Base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/Build/${presetName}/Int"
    },
    {
      "name": "Development",
      "description": "Windows Development Build (Debug x64)",
      "inherits": [ "Base" ],
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_COMPILER": "cl",
        "CMAKE_CXX_FLAGS": "/DDP_DEV_MODE",
        "CMAKE_OUTPUT_BASE_DIR": "${sourceDir}/Build/Development"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [ "Windows" ]
        }
      }
    },
    {
      "name": "Profile",
      "description": "Windows Profile Build (RelWithDebInfo x64)",
      "inherits": [ "Base" ],
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_CXX_COMPILER": "cl",
        "CMAKE_CXX_FLAGS": "/DDP_PROFILE_MODE",
        "CMAKE_OUTPUT_BASE_DIR": "${sourceDir}/Build/Profile"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [ "Windows" ]
        }
      }
    },
    {
      "name": "Master",
      "description": "Windows Master Build (Release x64)",
      "inherits": [ "Base" ],
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_COMPILER": "cl",
        "CMAKE_CXX_FLAGS": "/DDP_MASTER_MODE",
        "CMAKE_OUTPUT_BASE_DIR": "${sourceDir}/Build/Master"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [ "Windows" ]
        }
      }
    },

    //--- LINUX ---

    {
      "name": "Development-Linux",
      "inherits": [ "Base" ],
      "description": "Linux Development Build (Debug x64)",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_CXX_FLAGS": "-DDP_DEV_MODE",
        "CMAKE_OUTPUT_BASE_DIR": "${sourceDir}/Build/Development"
      }
    },

    {
      "name": "Profile-Linux",
      "inherits": [ "Base" ],
      "description": "Linux Profile Build (RelWithDebInfo x64)",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_CXX_FLAGS": "-DDP_PROFILE_MODE",
        "CMAKE_OUTPUT_BASE_DIR": "${sourceDir}/Build/Profile"
      }
    },

    {
      "name": "Master-Linux",
      "inherits": [ "Base" ],
      "description": "Linux Master Build (Release x64)",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_CXX_FLAGS": "-DDP_MASTER_MODE",
        "CMAKE_OUTPUT_BASE_DIR": "${sourceDir}/Build/Master"
      }
    }

  ],
  "buildPresets": [
    {
      "name": "Development",
      "configurePreset": "Development",
      "description": "Builds Development configuration",
      "cleanFirst": true
    },
    {
      "name": "Profile",
      "configurePreset": "Profile",
      "description": "Builds Profile configuration",
      "cleanFirst": true
    },
    {
      "name": "Master",
      "configurePreset": "Master",
      "description": "Builds Master configuration",
      "cleanFirst": true
    },

    // --- LINUX ---
    {
      "name": "Development-Linux",
      "configurePreset": "Development-Linux",
      "cleanFirst": true
    },

    {
      "name": "Profile-Linux",
      "configurePreset": "Profile-Linux",
      "cleanFirst": true
    },

    {
      "name": "Master-Linux",
      "configurePreset": "Master-Linux",
      "cleanFirst": true
    }

  ],
  "testPresets": [
    {
      "name": "Development-Test",
      "configurePreset": "Development",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "Profile-Test",
      "configurePreset": "Profile",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "Master-Test",
      "configurePreset": "Master",
      "output": {
        "outputOnFailure": true
      }
    },

    // --- LINUX ---
    {
      "name": "Development-Test-Linux",
      "configurePreset": "Development-Linux",
      "output": { "outputOnFailure": true }
    },

    {
      "name": "Profile-Test-Linux",
      "configurePreset": "Profile-Linux",
      "output": { "outputOnFailure": true }
    },

    {
      "name": "Master-Test-Linux",
      "configurePreset": "Master-Linux",
      "output": { "outputOnFailure": true }
    }

  ]
}
